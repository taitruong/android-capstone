<resources>

    <style name="Login" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:paddingTop">@dimen/margin_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/margin_top_and_bottom</item>
        <item name="android:paddingLeft">@dimen/margin_left_and_right</item>
        <item name="android:paddingRight">@dimen/margin_left_and_right</item>
    </style>

    <style name="SymptomBaseTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="PatientsListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="MedicationsListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="searchTextHighlight">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listViewActivatedStyle"/>

    <style name="quickContactBadgeStyle">
        <item name="android:background">@drawable/quickcontact_badge_small</item>
    </style>

    <color name="PatientPagerSlidingTabStripBackground">@android:color/white</color>
    <color name="DoctorPagerSlidingTabStripBackground">@android:color/white</color>
    <color name="PatientViewPagerBackground">@android:color/white</color>
    <color name="DoctorViewPagerBackground">@android:color/white</color>
</resources>
