<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_check_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Patient">
    <Button
        android:id="@+id/saveCheckIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_large"
        android:height="@dimen/row_height_large"
        android:drawableLeft="@drawable/ic_action_save"
        android:text="@string/save"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"/>

    <Button
        android:id="@+id/cancelCheckIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_large"
        android:layout_below="@+id/saveCheckIn"
        android:height="@dimen/row_height_large"
        android:drawableLeft="@drawable/ic_action_cancel"
        android:text="@string/cancel"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"/>

</RelativeLayout>